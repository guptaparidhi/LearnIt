<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_machine"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <ImageView
            android:id="@+id/text_floor_numb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_washing_machine"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:id="@+id/text_machine_numb"
            android:text="Machine #1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:fontFamily="@font/evident"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_machine_id"
            android:text="Near Washroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:fontFamily="@font/evident"
            android:textSize="10sp"/>

        
    </LinearLayout>

</android.support.v7.widget.CardView>